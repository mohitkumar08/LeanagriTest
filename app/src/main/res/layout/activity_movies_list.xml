<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.leanagritest.ui.movielist.MovieListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.movielist.MoviesListActivity">

        <HorizontalScrollView
            android:id="@+id/scroll_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:scrollbars="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:onClick="@{()->viewModel.getMoviesPopularityByHighToLow()}"
                    android:text="@string/popularity"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_high_low"
                    app:rippleColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.getMoviesPopularityByLowToHigh()}"
                    android:text="@string/popularity"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_low_to_high"
                    app:rippleColor="@color/white" />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:onClick="@{()->viewModel.getMoviesSortByDateHighToLow()}"
                    android:text="@string/date"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_high_low"
                    app:rippleColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.getMoviesSortByDateLowToHigh()}"
                    android:text="@string/date"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_low_to_high"
                    app:rippleColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.getMoviesSortByRatingHighToLow()}"
                    android:text="@string/rating"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_high_low"
                    app:rippleColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.getMoviesSortByRatingLowToHigh()}"
                    android:text="@string/rating"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_low_to_high"
                    app:rippleColor="@color/white" />
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/scroll_bar" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"

            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>